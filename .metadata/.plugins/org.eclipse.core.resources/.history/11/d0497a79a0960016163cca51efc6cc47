package Shapes;

import java.util.ArrayList;
import java.util.Scanner;
public class Shape2DApp {
	public static final void main(String[] args){
		
		ArrayList<IShape> shapes = new ArrayList<IShape>();
		Scanner input = new Scanner(System.in);
		System.out.println("Input number of shapes: ");
		int n = input.nextInt();
		System.out.println("Chooose shapes:");
		System.out.println("Option 1 for Square");
		System.out.println("Option 2 for Rectangle");
		System.out.println("Option 3 for Circle");
		System.out.println("Option 4 for Triangle");
		
		double x=0, y=0;
		for(int i=0;i<n;i++){
			System.out.println("Option:");
			int choice = input.nextInt();
			
			switch(choice){
				case(1):
					System.out.println("Enter length: ");
					x = input.nextDouble();
					Square square = new Square(x,x);
					shapes.add(square);
					System.out.println("Square created");
					break;
				case(2):
					System.out.println("Enter length: ");
					x = input.nextDouble();
					System.out.println("Enter breadth");
					y = input.nextDouble();
					Rectangle rect = new Rectangle(x,y);
					shapes.add(rect);
					System.out.println("Rectangle created");
					break;
				case(3):
					System.out.println("Enter radius ");
					x = input.nextDouble();
					Circle circle = new Circle(x);
					shapes.add(circle);
					System.out.println("Circle created");
					break;
				case(4):
					System.out.println("Enter base");
					x = input.nextDouble();
					System.out.println("Enter height");
					y = input.nextDouble();
					Triangle tri = new Triangle(x,y);
					shapes.add(tri);
					System.out.println("Triangle created");
					break;
				case(5):
					System.out.println("Calculate area:");
					double total = 0;
					for(IShape s : shapes){
						total+= s.findArea();
					}
					
					
					
					
			}
		}
		
	}
}
