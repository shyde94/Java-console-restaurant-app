package entity;

import java.util.ArrayList;
import java.util.Date;

public class ReservationAll {
	private ArrayList<Reservation> reservationList;
	
	public ReservationAll(){
		reservationList = new ArrayList<Reservation>();
	}
	
	public void createReservation(int tableNumber, int numberOfPeople, String hpNumber, String customerName, Date start){
		Reservation newRes = new Reservation(tableNumber, numberOfPeople, hpNumber, customerName, start);
		reservationList.add(newRes);
		System.out.println("Table " + tableNumber + "has been reserved for " + numberOfPeople + "for " + start + "by " + customerName );
	}
	
	public void deleteReservation(Reservation todelete){
		for(int i=0; i<reservationList.size();i++){
			if(reservationList.get(i) == todelete){
				reservationList.remove(i);
				System.out.println("This reservation has been removed.");
			}
		}
		System.out.println("Error. No changes have been made");
	}
}
