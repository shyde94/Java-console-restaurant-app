package Shapes3D;

import java.util.ArrayList;
import java.util.Scanner;

import Shapes.Circle;
import Shapes.IShape;
import Shapes.Rectangle;
import Shapes.Square;
import Shapes.Triangle;

public class Shape3DApp {
public static final void main(String[] args){
		
		ArrayList<IShape3D> shapes = new ArrayList<IShape3D>();
		Scanner input = new Scanner(System.in);
		System.out.println("Input number of shapes: ");
		int n = input.nextInt();
		System.out.println("Chooose shapes:");
		System.out.println("Option 1 for Cube");
		System.out.println("Option 2 for Cuboid");
		System.out.println("Option 3 for Sphere");
		System.out.println("Option 4 for Square based pyramid");
		
		double x=0, y=0, z=0;
		for(int i=0;i<n;i++){
			System.out.println("Option:");
			int choice = input.nextInt();
			
			switch(choice){
				case(1):
					System.out.println("Enter length: ");
					x = input.nextDouble();
					Cuboid cube = new Cuboid(x,x,x);
					shapes.add(cube);
					System.out.println("Cube created");
					break;
				case(2):
					System.out.println("Enter length: ");
					x = input.nextDouble();
					System.out.println("Enter breadth");
					y = input.nextDouble();
					System.out.println("Enter height: ");
					z = input.nextDouble();
					Cuboid cuboid = new Cuboid(x,y,z);
					shapes.add(cuboid);
					System.out.println("Cuboid created");
					break;
				case(3):
					System.out.println("Enter radius ");
					x = input.nextDouble();
					Sphere sphere = new Sphere(x);
					shapes.add(sphere);
					System.out.println("Sphere created");
					break;
				case(4):
					System.out.println("Enter base");
					x = input.nextDouble();
					System.out.println("Enter height");
					y = input.nextDouble();
					SquareBasePyramid pyramid = new SquareBasePyramid(x,y);
					shapes.add(pyramid);
					System.out.println("Square based pyramid created");
					break;
				default: System.out.println("Not an available option");n--;		
			}
			
		}
		System.out.println("Select option");
		System.out.println("Option 1: Find total surface area");
		int choice = input.nextInt();
		double total = 0;
		switch(choice){
		case(1):
			for(IShape3D s:shapes){
				System.out.println("Area:" + s.findSurfaceArea());
				total+= s.findSurfaceArea();
			}
			System.out.println("Total area: " + total);
		}
		
	}
}
