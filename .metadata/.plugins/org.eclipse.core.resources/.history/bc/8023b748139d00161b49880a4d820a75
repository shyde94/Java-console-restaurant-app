package entity;

import java.util.ArrayList;
import java.util.Date;

public class ReservationTotal {
	private ArrayList<Reservation> reservationList;
	
	public ReservationTotal(){
		reservationList = new ArrayList<Reservation>();
	}
	
	public void createReservation(int tableNumber, int numberOfPeople, String hpNumber, String customerName, Date start){
		Reservation newRes = new Reservation(tableNumber, numberOfPeople, hpNumber, customerName, start);
		reservationList.add(newRes);
		System.out.println("Table " + tableNumber + "has been reserved for " + numberOfPeople + "on " + start + "by " + customerName );
	}
	
	public void 
}
